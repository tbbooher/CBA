- content_for :resource_actions do   
  = ui_button 'back', t(:pages_index), pages_path

= set_browser_address(page.id,page.title)
- title page.title_and_flags, false

- interpret page do |presenter|
  - if page.page_template
    = presenter.render_with_template
  - else
    .cover_picture= presenter.cover_picture()
    %h1= presenter.title(false)
    = presenter.buttons(false)
    .page_body{id: "page_#{page.id.to_s}"}
      = presenter.body(false)
      = presenter.components(false)
    = presenter.attachments(false)
    = presenter.comments(false)
