- title t(:edit_role_for_user, :user => @user.name ), false

- content_for :resource_actions do
    = ui_button 'details', t(:users_profile), user_path(@user)
    = ui_button 'expand', t(:list_registrations), registrations_path

- if @user.avatar
    = image_tag @user.avatar_url(:thumb), :style=>'float: right;'

%h1= link_to( @user.name, @user )

%div{:style => 'clear: right'}


= form_for(@user, :url => update_role_user_path(@user), :html => { :method => :put }) do |f|
    = render :partial => 'registrations/role', 
             :locals => { :user => @user, :f => f, 
                          :partial_title => "<h2>#{t('userlist.role')}</h2>".html_safe }
    .field
        = f.label :submit, sc(:nbsp).html_safe
        = f.submit :class => 'button save'
