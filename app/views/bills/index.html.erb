<% title "All Bills" %>
<%# javascript 'endless_page' %>

  <%= will_paginate @bills %>

<% @bills.each do |bill| %>
    <h3><%= link_to bill.bill_title, bill %></h3>
    <p> by <%= link_to bill.sponsor.full_title, bill.sponsor %><br>

    <% if can? :update, Bill %>
    <p>
      <%= link_to 'Edit', edit_bill_path(bill) %> |
      <%= link_to 'Destroy', bill, :confirm => 'Are you sure?', :method => :delete %>
    </p>
    <% end %>
    <hr>
<% end %>

  <%= will_paginate @bills %>

<br>

<% if can? :create, Bill %>
    <%= link_to 'New Bill', new_bill_path %>
<% end %>
