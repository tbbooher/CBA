development:
  application:
    name:              "<h1>CBA-Development Environment</h1>"
    rss_title:         "iBoard.cc (DEVELOPMENT)"
    title_prefix:      'iBoard.cc (dev): '
    stylesheet_screen: application
    stylesheet_print:  application
    layout: application
    copyright:         Andreas Altendorfer
    copyright_url:     http://altendorfer.at
    meta_description:  'Author: Andreas Altendorfer, iboard.cc, IT-Veteran, Developer, Musik Benzin und Kuchen'
    registration_from: 'development+cba@iboard.cc'
    admin_notification_address: 'andi@iboard.cc'
    slogan:            '<address>unfuzzy development (env=development)</address>'
    pivotal_tracker_project: 'http://www.pivotaltracker.com/projects/203457'
    github_project:    'http://github.com/iboard/CBA'
    twitter_name: '@Twitter'
    twitter_link: 'http://twitter.com/nickendell'  
    google_profile: 'http://www.google.com/profiles/iboard.cc'
    twitter_profile: 'http://twitter.com/#!/Nickendell'
  constants:
    max_time_to_edit_new_comments: 5
    rss_feed_cache_time:           1.minute
    paginate_postings_per_page:    2
    paginate_users_per_page:       2
    paginate_episodes_per_page:    2
    postings_on_homepage:          6
    num_postings_on_welcome_page:  2
    rating_range:                  (1..5)
    paginate_ratings_per_page:     2
    paginate_blog_entries_per_page: 2
    delay_new_posting_notifications: 9
    sleep_in_delayed_jobs_worker:   5
    title_max_length: 30
    delay_comment_notifications:   0
    max_size_of_attachments_in_mb: 1

